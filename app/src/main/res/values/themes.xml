<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoList" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
    </style>

    <!-- Toolbar style -->
    <style name="Theme.ToDoList.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/background_actionbar</item>
    </style>
    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/bungee_inline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="Theme.ToDoList" parent="Base.Theme.ToDoList">

    </style>
</resources>
